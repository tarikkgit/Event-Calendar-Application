<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventPlanner</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/b6768de308.js" crossorigin="anonymous"></script>
</head>
<body>
    <header class="header" role="banner">
      <h1 class="logo">
        <a href="/"> Functions</a>
      </h1>
      <div class="nav-wrap">
        <nav class="main-nav" role="navigation">
          <ul class="unstyled list-hover-slide">
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/event/new">Event Form</a></li>
            <li><a href="/viewavailability">Free Time</a></li>
            <li><a href="/invitation">Invitation View</a></li>
            <li><a href="/reminder/all">Reminders</a></li>
            <li><a href="/viewFriends">Find Friends</a></li>
            <li><a href="/logout">Logout</a></li>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container-layout">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Tarik Ertugrul <a href="https://www.linkedin.com/in/teozkul/"><i class="fab fa-github"></i></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
