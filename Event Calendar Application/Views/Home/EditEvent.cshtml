@model EventPlanner.Models.Event

@{
    ViewData["Title"] = "Edit Event";
}

<h2>Edit Event</h2>

<form asp-action="UpdateEvent" method="post">
    <input type="hidden" asp-for="EventId" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ScheduledAt"></label>
        <input class="form-control" asp-for="ScheduledAt" type="datetime-local" />
        <span asp-validation-for="ScheduledAt" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Duration"></label>
        <input class="form-control" asp-for="Duration" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ParticipationCriteria"></label>
        <textarea class="form-control" asp-for="ParticipationCriteria"></textarea>
        <span asp-validation-for="ParticipationCriteria" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update Event</button>
</form>
